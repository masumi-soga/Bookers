<%= form_with model: @book, local:true do |f| %>
    <% if @book.errors.any? %>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    <% end %>
    <h1>Editing Book</h1>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit "Update Book" %>
<% end %>

