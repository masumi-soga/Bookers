<%= csrf_meta_tags %>


<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book) %></td>
    <td><%= link_to "edit", edit_book_path(book.id) %></td>
    <td><%= link_to "destroy", book_path(book), method: :delete %></td>
  </tr>
  <% end %>
</table>


<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
    <% if @book.errors.any? %>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
<% end %>